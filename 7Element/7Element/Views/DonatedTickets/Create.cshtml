@model _7Element.Models.DonatedTickets

@{
    ViewData["Title"] = "Create";
}

<h1>Donate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PredsGameId" class="control-label"></label>
                <select asp-for="PredsGameId" class ="form-control" asp-items="ViewBag.PredsGameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTitle" class="control-label"></label>
                <input asp-for="EmailTitle" class="form-control" />
                <span asp-validation-for="EmailTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailBody" class="control-label"></label>
                <textarea asp-for="EmailBody" class="form-control"></textarea>
                <span asp-validation-for="EmailBody" class="text-danger"></span>
            </div>
            <div>@Html.DisplayFor(modelItem => Model.PredsGame.Opponent)</div>
            <div class="form-group">
                <input type="submit" value="Donate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
