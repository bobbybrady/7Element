@model _7Element.Models.PickupGame

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PickupGame</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxSkaters)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxSkaters)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxGoalies)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxGoalies)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
@if(Model.DateTime > DateTime.Now)
{
<form asp-action="Apply">
    @Html.HiddenFor(m => m.PickupGameId)
    @Html.HiddenFor(m => m.MaxSkaters)
    @Html.HiddenFor(m => m.MaxGoalies)
    <input type="submit" value="Apply" class="btn btn-primary" />
</form>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
