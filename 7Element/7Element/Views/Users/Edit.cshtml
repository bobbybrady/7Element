@model _7Element.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @Html.HiddenFor(m => m.FirstName)
                <label asp-for="FirstName" class="control-label"></label>
                <h6>@Model.FirstName</h6>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.LastName)
                <label asp-for="LastName" class="control-label"></label>
                <h6>@Model.LastName</h6>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.Position)
                <label asp-for="Position" class="control-label"></label>
                <h6>@Model.Position</h6>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.Email)
                <label asp-for="Email" class="control-label"></label>
                <h6>@Model.Email</h6>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsVeteran" /> @Html.DisplayNameFor(model => model.IsVeteran)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

